@page
@model Abstergo.Pages.Link.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Favorite</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Favorite.Id" />
            <div class="form-group">
                <label asp-for="Favorite.Name" class="control-label"></label>
                <input asp-for="Favorite.Name" class="form-control" />
                <span asp-validation-for="Favorite.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Favorite.Url" class="control-label"></label>
                <input asp-for="Favorite.Url" class="form-control" />
                <span asp-validation-for="Favorite.Url" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                @*<label class="form-check-label">
                    <input class="form-check-input" asp-for="Favorite.IsFolder" /> @Html.DisplayNameFor(model => model.Favorite.IsFolder)
                </label>*@
                <select asp-for="Favorite.ItemType">
                    <option value="@ItemType.Folder">Folder</option>
                    <option value="@ItemType.Favorite">Favorite</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
