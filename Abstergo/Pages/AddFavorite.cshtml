@page
@model Abstergo.Pages.AddFavoriteModel
@{
    ViewData["Title"] = "Add new favorite";
}

<h1>Create new favorite</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="FolderID" />
            <input type="hidden" asp-for="LastOrder" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Favorite.Name" class="control-label"></label>
                <input asp-for="Favorite.Name" class="form-control" />
                <span asp-validation-for="Favorite.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Favorite.Url" class="control-label"></label>
                <input asp-for="Favorite.Url" class="form-control" />
                <span asp-validation-for="Favorite.Url" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>